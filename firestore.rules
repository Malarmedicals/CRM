rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin or manager
    function isAdminOrManager() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'manager'];
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection: Only admins/managers can read/write
    match /users/{userId} {
      // Allow users to read their own profile, admins/managers can read all
      allow read: if isAuthenticated() && 
                     (request.auth.uid == userId || isAdminOrManager());
      
      // Only admins/managers can update/delete
      allow update, delete: if isAdminOrManager();
      
      // Allow creation of user document during signup (user can create their own)
      allow create: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Users can read their own orders, admins/managers can read all
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdminOrManager());
      
      // Users can create their own orders, admins can create any
      allow create: if isAuthenticated() && 
                       (request.resource.data.userId == request.auth.uid || isAdminOrManager());
      
      // Only admins/managers can update/delete orders
      allow update, delete: if isAdminOrManager();
    }
    
    // Products collection: Public read, authenticated admin write
    match /products/{productId} {
      // Public read access for e-commerce integration
      allow read: if true;
      
      // Only authenticated admins/managers can create/update/delete products
      allow create: if isAuthenticated() && isAdminOrManager();
      allow update, delete: if isAdminOrManager();
    }
    
    // Leads collection: Only admins/managers can read, anyone can create
    match /leads/{leadId} {
      // Only admins/managers can read leads
      allow read: if isAdminOrManager();
      
      // Anyone can create leads (for e-commerce contact forms)
      allow create: if true;
      
      // Only admins/managers can update/delete
      allow update, delete: if isAdminOrManager();
    }
    
    // Categories collection: Public read, admin write
    match /categories/{categoryId} {
      // Public read access for e-commerce
      allow read: if true;
      
      // Only admins/managers can write
      allow write: if isAdminOrManager();
    }
    
    // CRM Actions collection: Admin only
    match /crmActions/{actionId} {
      // Only admins/managers can access
      allow read, write: if isAdminOrManager();
    }
    
    // Notifications collection: Users can read their own, admins can read all
    match /notifications/{notificationId} {
      // Users can read their own notifications, admins can read all
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdminOrManager());
      
      // Only admins/managers can write
      allow write: if isAdminOrManager();
    }
  }
}
